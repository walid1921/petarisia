<?xml version="1.0" encoding="UTF-8" ?>
<config
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/shopware/shopware/master/src/Core/System/SystemConfig/Schema/config.xsd"
>
    <card>
        <title>Sendcloud credentials</title>
        <title lang="de-DE">Sendcloud-Zugangsdaten</title>
        <input-field type="text">
            <name>publicKey</name>
            <required>true</required>
            <label>Public key</label>
            <label lang="de-DE">Public-Key</label>
        </input-field>
        <input-field type="password">
            <name>secretKey</name>
            <required>true</required>
            <label>Secret Key</label>
            <label lang="de-DE">Secret-Key</label>
        </input-field>
    </card>
</config>
