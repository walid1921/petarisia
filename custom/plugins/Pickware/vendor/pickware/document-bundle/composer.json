{
    "name": "pickware/document-bundle",
    "description": "A bundle for Shopware 6 to provide a document model",
    "license": "proprietary",
    "type": "library",
    "version": "4.99.0",
    "authors": [
        {
            "name": "Pickware GmbH",
            "email": "info@pickware.de"
        }
    ],
    "require": {
        "php": ">= 8.2",
        "ext-json": "*",
        "ext-mbstring": "*",
        "doctrine/dbal": "^3.6 || ^4.0",
        "league/flysystem": "^3.10.3",
        "pickware/bundle-installer": "^3.15.0",
        "pickware/dal-bundle": "^5.66.0",
        "pickware/document-utils": "^1.6.0",
        "pickware/http-utils": "^4.36.0",
        "pickware/installation-library": "^4.76.0",
        "pickware/php-standard-library": "^2.29.0",
        "pickware/units-of-measurement": "^3.12.0",
        "pickware/validation-bundle": "^3.80.0",
        "psr/cache": "^3.0.0",
        "shopware/core": ">=6.6.10.5 <6.8",
        "symfony/config": "^7.0.0",
        "symfony/dependency-injection": "^7.0.0",
        "symfony/event-dispatcher": "^7.0.0",
        "symfony/http-foundation": "^7.0.0",
        "symfony/routing": "^7.0.0",
        "symfony/translation": "^7.0.0",
        "symfony/translation-contracts": "^3.3.0",
        "symfony/validator": "^7.0.0",
        "twig/twig": "^3.4.3"
    },
    "require-dev": {
        "mikey179/vfsstream": "^1.6.8",
        "phpstan/extension-installer": "^1.4",
        "phpstan/phpstan": "2.1.29",
        "phpstan/phpstan-phpunit": "^2.0",
        "phpunit/phpunit": "^9.5.0",
        "pickware/phpstan-extensions": "*@dev",
        "pickware/unit-testing-tools": "*@dev",
        "shopware/storefront": "~6.6.2 || ~6.7.0",
        "smalot/pdfparser": "^2.0.0"
    },
    "repositories": [
        {
            "type": "path",
            "url": "../../libraries/composer-packages/*"
        },
        {
            "type": "path",
            "url": "../../libraries-dev/composer-packages/*"
        },
        {
            "type": "path",
            "url": "../../bundles/*"
        },
        {
            "type": "path",
            "url": "../../plugins-dev/*"
        }
    ],
    "autoload": {
        "psr-4": {
            "Pickware\\DocumentBundle\\": "src",
            "Pickware\\DocumentBundle\\Test\\TestEntityCreation\\": "test/TestEntityCreation/",
            "Pickware\\ShopwarePlugins\\DocumentBundle\\Migration\\": "src/MigrationOldNamespace"
        },
        "exclude-from-classmap": [
            "**.unit.php",
            "**.integration.php"
        ]
    },
    "config": {
        "allow-plugins": {
            "composer/package-versions-deprecated": true,
            "ergebnis/composer-normalize": true,
            "phpstan/extension-installer": true,
            "pickware/dependency-loader": true,
            "symfony/runtime": true,
            "viison/composer-git-hooks-installer-plugin": true
        }
    },
    "extra": {
        "ci-min-supported-shopware-version": "6.6.10.5"
    },
    "scripts": {
        "post-install-cmd": [
            "@remove-lock-file"
        ],
        "post-update-cmd": [
            "@remove-lock-file"
        ],
        "phpstan": "./vendor/bin/phpstan analyse --memory-limit=4G --no-interaction --ansi -c phpstan.neon.dist",
        "remove-lock-file": [
            "# Workaround as long as ocramius/package-versions is incompatible with composer config `lock: false`",
            "rm composer.lock"
        ],
        "test:integration": "${SHOPWARE_DIR}/vendor/bin/phpunit --config phpunit.integration.xml --testdox",
        "test:unit": "composer install && ./vendor/bin/phpunit --config phpunit.unit.xml --testdox"
    }
}
