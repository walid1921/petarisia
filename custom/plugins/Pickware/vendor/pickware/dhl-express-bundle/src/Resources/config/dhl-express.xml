<?xml version="1.0" encoding="UTF-8" ?>
<config
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/shopware/shopware/master/src/Core/System/SystemConfig/Schema/config.xsd"
>
    <card>
        <title>DHL Express credentials</title>
        <title lang="de-DE">DHL Express-Zugangsdaten</title>
        <input-field type="text">
            <name>username</name>
            <required>true</required>
            <label>Username</label>
            <label lang="de-DE">Benutzername</label>
        </input-field>
        <input-field type="password">
            <name>password</name>
            <required>true</required>
            <label>Password</label>
            <label lang="de-DE">Passwort</label>
        </input-field>
        <input-field type="text">
            <name>shipperNumber</name>
            <required>true</required>
            <label>Shippernumber</label>
            <label lang="de-DE">Accountnummer</label>
        </input-field>
        <input-field type="bool">
            <name>useTestingEndpoint</name>
            <label>Use testing webservice</label>
            <label lang="de-DE">Nutze Testing-Webservice</label>
            <helpText lang="de-DE">
                Nutze den Testing-Webservice von DHL Express anstatt den Productive-Webservice.
            </helpText>
            <helpText>Use the DHL Express testing web service instead of the productive web service.</helpText>
        </input-field>
    </card>
    <card>
        <title>Privacy settings</title>
        <title lang="de-DE">Datenschutzeinstellungen</title>
        <input-field type="bool">
            <name>enableDispatchNotification</name>
            <label lang="de-DE">Versandbenachrichtigung per E-Mail aktivieren</label>
            <label>Enable dispatch notification via email</label>
            <helpText lang="de-DE">
                Wenn aktiviert, sendet DHL eine Versandbenachrichtigung per E-Mail an den Paketempf√§nger.
            </helpText>
            <helpText>If enabled, DHL sends a dispatch notification via email to the parcel receiver.</helpText>
        </input-field>
    </card>
</config>
