{
    "name": "pickware/bundle-installer",
    "description": "A composer package for Shopware 6 that contains the logic to install and uninstall bundles",
    "license": "proprietary",
    "type": "library",
    "version": "3.15.0",
    "authors": [
        {
            "name": "Pickware GmbH",
            "email": "info@pickware.de"
        }
    ],
    "require": {
        "php": ">= 8.2",
        "doctrine/dbal": "^3.6 || ^4.0",
        "shopware/core": ">=6.6.10.5 <6.8",
        "symfony/dependency-injection": "^7.0.0"
    },
    "require-dev": {
        "phpstan/extension-installer": "^1.4",
        "phpstan/phpstan": "2.1.29",
        "phpstan/phpstan-phpunit": "^2.0",
        "phpunit/phpunit": "^9.5.0",
        "pickware/unit-testing-tools": "*@dev"
    },
    "repositories": [
        {
            "type": "path",
            "url": "../../../libraries/composer-packages/*"
        },
        {
            "type": "path",
            "url": "../../../libraries-dev/composer-packages/*"
        }
    ],
    "autoload": {
        "psr-4": {
            "Pickware\\BundleInstaller\\": "src"
        },
        "exclude-from-classmap": [
            "**.unit.php",
            "**.integration.php"
        ]
    },
    "config": {
        "allow-plugins": {
            "composer/package-versions-deprecated": true,
            "ergebnis/composer-normalize": true,
            "phpstan/extension-installer": true,
            "symfony/runtime": true,
            "viison/composer-git-hooks-installer-plugin": true
        },
        "lock": false
    },
    "extra": {
        "ci-min-supported-shopware-version": "6.6.10.5"
    },
    "scripts": {
        "phpstan": "./vendor/bin/phpstan analyse --memory-limit=4G --no-interaction --ansi -c phpstan.neon.dist",
        "test:integration": "APP_ENV=test ${SHOPWARE_DIR}/vendor/bin/phpunit --config phpunit.integration.xml --testdox",
        "test:unit": "composer install && ./vendor/bin/phpunit --config phpunit.unit.xml --testdox"
    }
}
