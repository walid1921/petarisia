{
    "name": "pickware/erp-bundle",
    "description": "Pickware ERP, the ERP system integrated into Shopware",
    "license": "proprietary",
    "type": "library",
    "version": "1.125.0",
    "authors": [
        {
            "name": "Pickware GmbH",
            "email": "info@pickware.de"
        }
    ],
    "require": {
        "php": ">= 8.2",
        "ext-json": "*",
        "composer-runtime-api": "^2.0.0",
        "doctrine/dbal": "^3.6 || ^4.0",
        "league/csv": "^9.6",
        "opis/json-schema": "^1.0.19",
        "pickware/ai-bundle": "^1.35.0",
        "pickware/api-error-handling-bundle": "^3.82.0",
        "pickware/api-versioning-bundle": "^3.31.0",
        "pickware/bundle-installer": "^3.15.0",
        "pickware/config-bundle": "^3.66.0",
        "pickware/dal-bundle": "^5.66.0",
        "pickware/debug-bundle": "^4.70.0",
        "pickware/document-bundle": "^4.99.0",
        "pickware/feature-flag-bundle": "^3.75.0",
        "pickware/http-utils": "^4.36.0",
        "pickware/incompatibility-bundle": "^2.67.0",
        "pickware/installation-library": "^4.76.0",
        "pickware/money-bundle": "^4.66.0",
        "pickware/php-standard-library": "^2.29.0",
        "pickware/shopware-extensions-bundle": "^3.72.0",
        "pickware/upsell-nudging-bundle": "^1.50.0",
        "pickware/validation-bundle": "^3.80.0",
        "picqer/php-barcode-generator": "^2.2",
        "psr/clock": "^1.0.0",
        "shopware/core": ">=6.6.10.5 <6.8",
        "soundasleep/html2text": "^2.1",
        "symfony/config": "^7.0.0",
        "symfony/console": "^7.0.0",
        "symfony/dependency-injection": "^7.0.0",
        "symfony/event-dispatcher": "^7.0.0",
        "symfony/http-foundation": "^7.0.0",
        "symfony/polyfill-php84": "^1.32.0",
        "symfony/polyfill-php85": "^1.33.0"
    },
    "require-dev": {
        "ext-dom": "*",
        "mikey179/vfsstream": "^1.6.8",
        "phpstan/extension-installer": "^1.4",
        "phpstan/phpstan": "2.1.29",
        "phpstan/phpstan-phpunit": "^2.0",
        "phpunit/phpunit": "^9.5.0",
        "pickware/phpstan-extensions": "*@dev",
        "pickware/shopware-integration-test-plugin": "@dev",
        "pickware/unit-testing-tools": "*@dev"
    },
    "suggest": {
        "shopware/administration": "Enables Pickware ERP to be operated via Shopware 6 administration frontend."
    },
    "repositories": [
        {
            "type": "path",
            "url": "../../bundles/*"
        },
        {
            "type": "path",
            "url": "../../libraries/composer-packages/*"
        },
        {
            "type": "path",
            "url": "../../libraries-dev/composer-packages/*"
        },
        {
            "type": "path",
            "url": "../../plugins-dev/*"
        },
        {
            "type": "vcs",
            "url": "https://github.com/shopware/SwagMigrationAssistant.git"
        }
    ],
    "autoload": {
        "psr-4": {
            "Pickware\\PickwareErpStarter\\": "src/",
            "Pickware\\PickwareErpStarter\\Test\\TestEntityCreation\\": "test/TestEntityCreation/"
        },
        "files": [
            "src/Polyfill/Shopware/A11yRenderedDocumentAware.php",
            "src/Stock/ProductReservedStockUpdater.php"
        ],
        "exclude-from-classmap": [
            "**.unit.php",
            "**.integration.php"
        ]
    },
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true,
            "pickware/dependency-loader": true,
            "symfony/runtime": true
        },
        "lock": false
    },
    "extra": {
        "ci-min-supported-shopware-version": "6.6.10.5",
        "package-exclusively-with-plugins": [
            "pickware/pickware-erp-starter",
            "pickware/pickware"
        ]
    },
    "scripts": {
        "phpstan": "./vendor/bin/phpstan analyse --memory-limit=4G --no-interaction --ansi -c phpstan.neon.dist",
        "test:integration": "APP_ENV=test ${SHOPWARE_DIR}/vendor/bin/phpunit --config phpunit.integration.xml --testdox",
        "test:performance": "${SHOPWARE_DIR}/vendor/bin/phpunit --config phpunit.performance.xml --testdox",
        "test:unit": "composer install && ./vendor/bin/phpunit --config phpunit.unit.xml --testdox"
    }
}
