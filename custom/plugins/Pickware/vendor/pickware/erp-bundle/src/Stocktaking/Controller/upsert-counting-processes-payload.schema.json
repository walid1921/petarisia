{
    "$schema": "http://json-schema.org/draft-07/schema",
    "title": "Stocktake upsert-counting-processes payload",
    "description": "POST request payload for api route _action/pickware-erp/stocktaking/upsert-counting-processes",
    "type": "object",
    "required": ["countingProcesses", "associations"],
    "properties": {
        "countingProcesses": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/countingProcess"
            }
        },
        "associations": {
            "type": "object"
        },
        "overwrite": {
            "type": "boolean",
            "default": false
        }
    },
    "definitions": {
        "countingProcess": {
            "type": "object",
            "required": ["id", "stocktakeId", "items", "binLocationId"],
            "properties": {
                "id": {
                    "$ref": "#/definitions/uuid"
                },
                "number": {
                    "type": "string"
                },
                "stocktakeId": {
                    "$ref": "#/definitions/uuid"
                },
                "binLocationId": {
                    "oneOf": [{ "$ref": "#/definitions/uuid" }, { "type": "null" }]
                },
                "items": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/countingProcessItem"
                    }
                }
            }
        },
        "uuid": {
            "description": "A UUID in HEX format",
            "type": "string",
            "minLength": 32,
            "maxLength": 32,
            "pattern": "^[0-9a-f]{32}$"
        },
        "countingProcessItem": {
            "type": "object",
            "required": ["productId", "quantity"],
            "properties": {
                "id": {
                    "$ref": "#/definitions/uuid"
                },
                "productId": {
                    "$ref": "#/definitions/uuid"
                },
                "quantity": {
                    "type": "integer",
                    "minimum": 0
                }
            }
        }
    }
}
