{
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "object",
    "required": ["lineItemId", "payload"],
    "additionalProperties": false,
    "properties": {
        "lineItemId": {
            "$ref": "#/definitions/uuid"
        },
        "payload": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "batchId": {
                    "oneOf": [
                        {
                            "type": "null"
                        },
                        {
                            "$ref": "#/definitions/uuid"
                        }
                    ]
                },
                "destinationAssignmentSource": {
                    "type": "string"
                },
                "destinationBinLocationId": {
                    "oneOf": [
                        {
                            "type": "null"
                        },
                        {
                            "$ref": "#/definitions/uuid"
                        }
                    ]
                },
                "price": {
                    "type": "number"
                },
                "quantity": {
                    "type": "integer",
                    "minimum": 1
                }
            }
        }
    },
    "definitions": {
        "uuid": {
            "description": "A UUID in HEX format",
            "type": "string",
            "minLength": 32,
            "maxLength": 32,
            "pattern": "^[0-9a-f]{32}$"
        }
    }
}
