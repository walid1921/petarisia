{
    "$schema": "http://json-schema.org/draft-07/schema",
    "title": "Stock controller index-stock-for-products payload",
    "description": "PUT request payload for api route _action/pickware-erp/index-stock",
    "type": "object",
    "required": ["productIds"],
    "additionalProperties": false,
    "properties": {
        "productIds": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/uuid"
            }
        }
    },
    "definitions": {
        "uuid": {
            "description": "A UUID in HEX format",
            "type": "string",
            "minLength": 32,
            "maxLength": 32,
            "pattern": "^[0-9a-f]{32}$"
        }
    }
}
