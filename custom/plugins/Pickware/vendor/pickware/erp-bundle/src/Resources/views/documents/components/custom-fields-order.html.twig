{% sw_include '@PickwareErpBundle/documents/components/custom-fields-order.css.twig' %}

{% if config.pickwareErpOrderCustomFields is defined %}
    {% for customField in config.pickwareErpOrderCustomFields %}
        <div class="custom-field-item">
            <b>{{ customField.label|sw_sanitize(null, true) }}:</b>
            {% if customField.type == 'media' %}
                <br> <img src="{{ customField.value }}" class="custom-field-order-media-image" />
            {% else %}
                {{ customField.value|sw_sanitize(null, true)|nl2br }}
            {% endif %}
        </div>
    {% endfor %}
{% endif %}
