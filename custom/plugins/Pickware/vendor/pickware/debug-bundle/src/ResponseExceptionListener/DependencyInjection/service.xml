<?xml version="1.0" ?>
<container
    xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd"
>
    <parameters>
        <parameter key="pickware_debug_bundle.relativ_path_to_public_key">/../Resources/jwt/public-key.spki</parameter>
    </parameters>
    <services>
        <service id="Pickware\DebugBundle\ResponseExceptionListener\JwtValidator">
            <argument>%pickware_debug_bundle.relativ_path_to_public_key%</argument>
            <argument type="service" id="clock" />
        </service>
        <service id="pickware_debug.http_sanitizing" class="Pickware\HttpUtils\Sanitizer\HttpSanitizing">
            <argument type="service" id="pickware_debug.http_auth_sanitizer" />
            <argument type="service" id="Pickware\DebugBundle\ResponseExceptionListener\RequestBodySizeSanitizer" />
        </service>
        <service
            id="pickware_debug.http_auth_sanitizer"
            class="Pickware\HttpUtils\Sanitizer\HeaderSanitizer"
            shared="false"
        >
            <factory class="Pickware\HttpUtils\Sanitizer\HeaderSanitizer" method="createForDefaultAuthHeaders" />
        </service>
        <service id="Pickware\DebugBundle\ResponseExceptionListener\RequestBodySizeSanitizer" shared="false" />
    </services>
</container>
