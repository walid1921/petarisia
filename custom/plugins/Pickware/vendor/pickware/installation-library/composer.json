{
    "name": "pickware/installation-library",
    "description": "A library with installers for Shopware 6 plugin installations",
    "license": "proprietary",
    "type": "library",
    "version": "4.76.0",
    "authors": [
        {
            "name": "Pickware",
            "email": "info@pickware.de"
        }
    ],
    "require": {
        "php": ">= 8.2",
        "doctrine/dbal": "^3.6 || ^4.0",
        "pickware/dal-bundle": "^5.66.0",
        "pickware/php-standard-library": "^2.29.0",
        "psr/log": "^3.0.0",
        "shopware/core": ">=6.6.10.5 <6.8",
        "symfony/yaml": "^7.0.0"
    },
    "require-dev": {
        "mikey179/vfsstream": "^1.6",
        "monolog/monolog": "^3.3.1",
        "phpstan/extension-installer": "^1.4",
        "phpstan/phpstan": "2.1.29",
        "phpstan/phpstan-phpunit": "^2.0",
        "phpunit/phpunit": "^9.5.0",
        "pickware/phpstan-extensions": "*@dev",
        "pickware/unit-testing-tools": "*@dev"
    },
    "repositories": [
        {
            "type": "path",
            "url": "../../../bundles/*"
        },
        {
            "type": "path",
            "url": "../../../libraries/composer-packages/*"
        },
        {
            "type": "path",
            "url": "../../../libraries-dev/composer-packages/*"
        },
        {
            "type": "path",
            "url": "../../../plugins-dev/*"
        }
    ],
    "autoload": {
        "psr-4": {
            "Pickware\\InstallationLibrary\\": "src"
        },
        "files": [
            "src/Migration/collation_functions.php",
            "src/Migration/index_functions.php"
        ],
        "exclude-from-classmap": [
            "**.unit.php",
            "**.integration.php"
        ]
    },
    "config": {
        "allow-plugins": {
            "composer/package-versions-deprecated": true,
            "ergebnis/composer-normalize": true,
            "phpstan/extension-installer": true,
            "pickware/dependency-loader": true,
            "symfony/runtime": true,
            "viison/composer-git-hooks-installer-plugin": true
        },
        "lock": false
    },
    "extra": {
        "ci-min-supported-shopware-version": "6.6.10.5"
    },
    "scripts": {
        "phpstan": "./vendor/bin/phpstan analyse --memory-limit=4G --no-interaction --ansi -c phpstan.neon.dist",
        "test:integration": "${SHOPWARE_DIR}/vendor/bin/phpunit --config phpunit.integration.xml --testdox",
        "test:unit": "composer install && ./vendor/bin/phpunit --config phpunit.unit.xml --testdox"
    }
}
