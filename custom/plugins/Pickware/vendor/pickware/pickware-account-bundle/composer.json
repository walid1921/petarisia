{
    "name": "pickware/pickware-account-bundle",
    "description": "A bundle for Shopware 6 that provides functionality for communicating with the Pickware Account API.",
    "license": "proprietary",
    "type": "library",
    "version": "1.8.0",
    "authors": [
        {
            "name": "Pickware GmbH",
            "email": "info@pickware.de"
        }
    ],
    "require": {
        "php": ">= 8.2",
        "guzzlehttp/guzzle": "^7.5.0",
        "pickware/api-error-handling-bundle": "^3.79.0",
        "pickware/bundle-installer": "^3.15.0",
        "pickware/http-utils": "^4.34.0",
        "pickware/php-standard-library": "^2.27.0",
        "shopware/core": "~6.6.2 || ~6.7.0",
        "symfony/dependency-injection": "^7.0.0",
        "symfony/http-foundation": "^7.0.0"
    },
    "require-dev": {
        "phpstan/extension-installer": "^1.4",
        "phpstan/phpstan": "2.1.29",
        "phpstan/phpstan-phpunit": "^2.0",
        "phpunit/phpunit": "^9.5.0",
        "pickware/phpstan-extensions": "*@dev",
        "pickware/unit-testing-tools": "*@dev"
    },
    "repositories": [
        {
            "type": "path",
            "url": "../../bundles/*"
        },
        {
            "type": "path",
            "url": "../../libraries/composer-packages/*"
        },
        {
            "type": "path",
            "url": "../../libraries-dev/composer-packages/*"
        },
        {
            "type": "path",
            "url": "../../plugins-dev/*"
        }
    ],
    "autoload": {
        "psr-4": {
            "Pickware\\PickwareAccountBundle\\": "src"
        },
        "exclude-from-classmap": [
            "**.unit.php",
            "**.intergration.php"
        ]
    },
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true,
            "symfony/runtime": true
        },
        "lock": false
    },
    "extra": {
        "ci-min-supported-shopware-version": "6.6.2.0"
    },
    "scripts": {
        "phpstan": "./vendor/bin/phpstan analyse --memory-limit=4G --no-interaction --ansi -c phpstan.neon.dist",
        "test:unit": "composer install && ./vendor/bin/phpunit --config phpunit.unit.xml --testdox"
    }
}
