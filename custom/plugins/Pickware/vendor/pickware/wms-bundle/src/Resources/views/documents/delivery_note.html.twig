{% sw_extends '@Framework/documents/delivery_note.html.twig' %}

{% block document_head %}
    {{ parent() }}
    <style>
        .pw-wms-outstanding-items-title {
            padding: 20px 0 10px 0;
            text-align: left;
        }
    </style>
{% endblock %}

{% block document_side_info_contents %}
    {{ parent() }}
    {% if order and order.orderNumber %}
        {% sw_include '@PickwareWmsBundle/documents/components/additional_side_info_content.html.twig' with {
            orderNumber: order.orderNumber
        } %}
    {% endif %}
{% endblock %}

{% block document_line_item_table_column_quantity %}
    {% set displayOutstandingItems = config.pickwareWmsDisplayOutstandingItemsOnPartialDeliveryNote is not defined or config.pickwareWmsDisplayOutstandingItemsOnPartialDeliveryNote %}
    {% if displayOutstandingItems %}
        {{ lineItem.quantity }}
    {% else %}
        {{ parent() }}
    {% endif %}
{% endblock %}

{% block document_loop_last_table_open %}
    {% set remainingLineItems = order.customFields.pickwareWmsRemainingLineItems ?? [] %}
    {% set displayOutstandingItems = config.pickwareWmsDisplayOutstandingItemsOnPartialDeliveryNote is not defined or config.pickwareWmsDisplayOutstandingItemsOnPartialDeliveryNote %}
    {% if config.displayLineItems and displayOutstandingItems and remainingLineItems|length > 0 %}
        <div class="letter-body">
            <div class="document-title-container">
                {{ block('document_headline') }}
            </div>
            <div class="line-item-container">
                <table class="line-item-table">
    {% else %}
        {{ parent() }}
    {% endif %}
{% endblock %}

{% block document_loop_last_table_close %}
    {% set remainingLineItems = order.customFields.pickwareWmsRemainingLineItems ?? [] %}
    {% set displayOutstandingItems = config.pickwareWmsDisplayOutstandingItemsOnPartialDeliveryNote is not defined or config.pickwareWmsDisplayOutstandingItemsOnPartialDeliveryNote %}
    {% if config.displayLineItems and displayOutstandingItems and remainingLineItems|length > 0 %}
        {% set renderedLineItemsOnCurrentPage = counter.counter % itemsPerPage %}
        {% set outstandingHeaderRenderedOnCurrentPage = false %}

        {% for lineItem in remainingLineItems %}
            {% if renderedLineItemsOnCurrentPage == itemsPerPage %}
                {{ block('table_close') }}
                <div class="page_break"></div>
                {{ block('logo') }}
                {{ block('letter_header') }}
                <div class="letter-body">
                    <div class="document-title-container">
                        {{ block('document_headline') }}
                    </div>
                    <div class="line-item-container">
                        <table class="line-item-table">

                {% set renderedLineItemsOnCurrentPage = 0 %}
                {% set outstandingHeaderRenderedOnCurrentPage = false %}
            {% endif %}

            {% if not outstandingHeaderRenderedOnCurrentPage %}
                <tr>
                    {# Using a large colspan is fine here because the browser clips it to the actual column count. #}
                    <th class="pw-wms-outstanding-items-title" colspan="1000">
                        {{ 'pickware-wms.delivery-note-document.outstanding-items.title'|trans|sw_sanitize(null, true) }}
                    </th>
                </tr>

                <tr class="line-item-table-header">
                    {% if config.displayLineItemPosition %}
                        <th>{{ 'document.lineItems.header.position'|trans|sw_sanitize(null, true) }}</th>
                    {% endif %}

                    <th class="product-number">{{ 'document.lineItems.header.productNumber'|trans|sw_sanitize(null, true) }}</th>
                    <th class="product-label">{{ 'document.lineItems.header.label'|trans|sw_sanitize(null, true) }}</th>
                    <th class="numbers">{{ 'pickware-wms.delivery-note-document.outstanding-items.header.outstanding'|trans|sw_sanitize(null, true) }}</th>

                    {% if config.displayPrices %}
                        <th class="numbers">{{ 'document.lineItems.header.tax'|trans|sw_sanitize(null, true) }}</th>
                        <th class="numbers incl-vat">{{ 'document.lineItems.header.unitPrice'|trans|sw_sanitize(null, true) }}</th>
                        <th class="numbers incl-vat">{{ 'document.lineItems.header.total'|trans|sw_sanitize(null, true) }}</th>
                    {% endif %}
                </tr>
                {% set outstandingHeaderRenderedOnCurrentPage = true %}
            {% endif %}

            <tr class="line-item" tabindex="0">
                {% if config.displayLineItemPosition %}
                    <td></td>
                {% endif %}

                <td class="line-item-product-number">{{ lineItem.productNumber | default('') | sw_sanitize(null, true) }}</td>
                <td class="line-item-breakable">
                    <span class="line-item-label level-0">{{ lineItem.label | sw_sanitize(null, true) }}</span>
                    {% if lineItem.options|length >= 1 %}
                        <br/>
                        {% for option in lineItem.options %}
                            {{ option.group|sw_sanitize(null, true) }}: {{ option.option|sw_sanitize(null, true) }}
                            {% if lineItem.options|last != option %}
                                {{ " | " }}
                            {% endif %}
                        {% endfor %}
                    {% endif %}
                </td>
                <td class="align-right">{{ lineItem.quantity }}</td>

                {% if config.displayPrices %}
                    <td class="align-right">{% for taxRate in lineItem.taxRates %}{{ taxRate }} % {% if loop.last %}{% else %}<br>{% endif %}{% endfor %}</td>
                    <td class="align-right">{{ lineItem.unitPrice|currency(currencyIsoCode, languageId) }}</td>
                    <td class="align-right">{{ lineItem.totalPrice|currency(currencyIsoCode, languageId) }}</td>
                {% endif %}
            </tr>

            {% set renderedLineItemsOnCurrentPage = renderedLineItemsOnCurrentPage + 1 %}
        {% endfor %}
    {% endif %}

    {{ parent() }}
{% endblock %}
